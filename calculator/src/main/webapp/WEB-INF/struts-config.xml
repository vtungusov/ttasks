<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean
                name="calcForm"
                type="com.siberteam.vtungusov.calc.form.CalcForm">
        </form-bean>
    </form-beans>

    <action-mappings>
        <action
                path="/Main"
                type="org.apache.struts.actions.ForwardAction"
                forward="/jsp/main.jsp"/>

        <action
                path="/Compute"
                type="com.siberteam.vtungusov.calc.action.CalcAction"
                name="calcForm"
                validate="true"
                input="/jsp/main.jsp">

            <forward name="success" path="/jsp/main.jsp"/>
        </action>
    </action-mappings>

    <message-resources parameter="properties.common"/>
</struts-config>