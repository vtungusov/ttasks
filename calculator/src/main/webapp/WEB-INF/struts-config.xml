<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean
                name="calcForm"
                type="com.siberteam.vtungusov.calc.form.CalcForm"/>
    </form-beans>

    <global-exceptions>
        <exception
                type="java.lang.ArithmeticException"
                key="error.global.arithmeticException"
                path="/jsp/main.jsp"/>
        <exception type="java.lang.IllegalArgumentException"
                   key="error.global.IllegalArgumentException"
                   path="/jsp/main.jsp"/>
        <exception
                type="java.lang.Exception"
                key="error.global.exception"
                path="/jsp/error.jsp"/>
    </global-exceptions>

    <action-mappings>
        <action
                path="/Main"
                type="org.apache.struts.actions.ForwardAction"
                forward="/jsp/main.jsp"/>
        <action
                path="/Compute"
                type="com.siberteam.vtungusov.calc.action.CalcAction"
                name="calcForm"
                input="/jsp/main.jsp">

            <forward name="success" path="/jsp/main.jsp"/>
        </action>
    </action-mappings>

    <message-resources
            parameter="properties.common"/>

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml, /WEB-INF/validator-calc.xml"/>
    </plug-in>
</struts-config>